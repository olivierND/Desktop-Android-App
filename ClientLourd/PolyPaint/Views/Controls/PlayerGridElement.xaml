<UserControl x:Class="PolyPaint.Views.Controls.PlayerGridElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PolyPaint.Views.Controls"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Style="{StaticResource GameGridHover}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>


        <Button Grid.Column="0" Grid.Row="0" Margin="10 0 0 0" MaxHeight="30" Width="30"
                Style="{StaticResource SystemIconButton}" >
            <fa:ImageAwesome Icon="User" Foreground="{StaticResource ForegroundDarkBrush}"/>
        </Button>

        <TextBlock x:Name="PlayerName" Grid.Column="1" Padding="10 5 0 5"/>

    </Grid>
</UserControl>